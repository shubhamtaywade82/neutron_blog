<h1 class="text-center mt-4">Categories</h1>
<div class="flickr_pagination mb-4">
  <%= will_paginate(@categories , renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
<div class="container" align="center">
  <% @categories.each do |category| %>
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center mb-2" style:"width: 40px;">
        <%= link_to category.name, category_path(category), class: "text-success" %>
        <span class="badge badge-primary badge-pill"> <%= pluralize(category.articles.count, " article")%></span>
      </li>
    </ul>
  <% end %>
</div>
<div class="flickr_pagination mt-4">
  <%= will_paginate(@categories , renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
