<%= render 'shared/errors', obj: @article %>
<%#
  This is new form for creating a new article in the articles table
 %>
<%# The form_for is a helper method provided by rails to create fields and abels in the html file %>
<div class='col-xs-12'>
  <%= form_for @article do |f| %>
    <div class="form-group row">
      <%#  Lable and text field for accepting the Title of the article %>
      <%= f.label :title, "Title", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control shadow rounded shadow rounded", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <%# Label and textarea to accept the description of the Article %>
      <%= f.label :description, "Description", class: "col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Body of article" %>
      </div>
    </div>
    <div class="form-group row">
      <%#  Lable and text field for accepting the Title of the article %>
      <%= f.label :user_id, "User", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= f.collection_select :category_ids, Category.all, :id, :name, { prompt: "Select Category (Can be empty)"}, {multiple: true, size: 3, class: "form-control shadow rounded custom-select shadow rounded" } %>
      </div>
    </div>
    <div class="form-group row">
      <%#  Lable and text field for accepting the Title of the article %>
      <%= f.label :user_id, "User", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= f.collection_select :tag_ids, Tag.all, :id, :name, { prompt: "Select Tag (Can be empty)"}, {multiple: true, size: 3, class: "form-control shadow rounded custom-select shadow rounded" } %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-offset-4 col-sm-5">
        <%# This tag is the submit button after entering the data into the text field and text area this line invokes the create action in the articles controller %>
        <%= f.submit class: 'btn btn-primary' %><br>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-xs-4 col-xs-offset-4">
        <%= link_to "Cancel request and go Back to the list", articles_path %>
      </div>
    </div>
  <% end %>
</div>
